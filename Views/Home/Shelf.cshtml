@{
    ViewBag.Title = "Index";
}

<body style="background:linear-gradient(rgba(47, 23, 15, 0.65), rgba(47, 23, 15, 0.65)), url('/wwwroot/images/bg.jpg');">
    <br /><br />
    <h1 class="text-center text-white">My Shelf</h1><br />
    <div class="container">
        <p style="text-align: right;">
            <a class="btn btn-sm btn-primary" href="@Url.Action("AddDrink", "Home")"><i class="fa fa-plus"></i> + Drink</a>
        </p>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col" class="text-white">Name</th>
                        <th scope="col" class="text-white">Type</th>
                        <th scope="col" class="text-white"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var drink in Model)
                    {
                        <tr>
                            <td class="text-white">@drink.DrinkName</td>
                            <td class="text-white">@drink.DrinkType</td>
                            <td class="text-white">
                                <form method="post" action="@Url.Action("DeleteDrink", "Home")">
                                    <input type="hidden" name="name" value="@drink.DrinkName" />
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-trash"></i> Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div><br /><br />
    <footer class="text-center footer text-faded py-5">
        <div class="container">
            <p class="m-0 small">Copyright&nbsp;©&nbsp;MixMaster 2023</p>
        </div>
    </footer>
    <script src="~/wwwroot/js/jquery.min.js"></script>
    <script src="~/wwwroot/js/bootstrap.min.js"></script>
    <script src="~/wwwroot/js/current-day.js"></script>
</body>