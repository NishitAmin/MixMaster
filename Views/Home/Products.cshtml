@model IEnumerable<Mix_Master.Models.TBLUserInfo>

@{
    ViewBag.Title = "Products";
}

<head>
    <link rel="stylesheet" href="~/wwwroot/css/bootstrap.min.css">
</head>

<body style="background: linear-gradient(rgba(47, 23, 15, 0.65), rgba(47, 23, 15, 0.65)), url('/wwwroot/images/bg.jpg');">
    <h1 class="text-center text-white d-none d-lg-block site-heading"><span class="text-primary site-heading-upper mb-3">Crafting Cocktails with Ease&nbsp;</span><span class="site-heading-lower"><b>MixMaster</b></span></h1>
    <section class="page-section">
        <div class="container">
            <div class="product-item">
                <div class="d-flex product-item-title">
                    <div class="d-flex mr-auto bg-faded p-5 rounded">
                        <h2 class="section-heading mb-0"><span class="section-heading-upper">MIXED TO PERFECTION</span><span class="section-heading-lower">COCKTAILS</span></h2>
                    </div>
                </div><img class="img-fluid d-flex mx-auto product-item-img mb-3 mb-lg-0 rounded" src="/wwwroot/images/products-03.jpg">
                <div class="bg-faded p-5 rounded">
                    <p class="mb-0">
                        Our dedication shines through in every drink we serve. When you choose a libation from us, rest assured, it's an experience that will leave a lasting impression. Whether it's our renowned signature cocktail, a revitalizing herbal infusion, or a humble cup of expertly sourced black coffee.</p>
                </div>
            </div>
        </div>
    </section>
    <section class="page-section">
        <div class="container">
            <div class="product-item">
                <div class="d-flex product-item-title">
                    <div class="d-flex ml-auto bg-faded p-5 rounded">
                        <h2 class="section-heading mb-0"><span class="section-heading-upper">SWEET INDULGENCES, CULINARY CREATIONS</span><span class="section-heading-lower">Kitchen</span></h2>
                    </div>
                </div><img class="img-fluid d-flex mx-auto product-item-img mb-3 mb-lg-0 rounded" src="/wwwroot/images/products-02.jpg">
                <div class="bg-faded p-5 rounded">
                    <p class="mb-0">Explore our seasonal menu brimming with delectable snacks, freshly baked goods, and hearty meals perfect for breakfast or lunch. We take pride in sourcing ingredients from local, organic farms, and collaborating with premium vendors to ensure each dish is a culinary masterpiece that reflects our commitment to quality and flavor.</p>
                </div>
            </div>
        </div>
    </section>
    <section class="page-section">
        <div class="container">
            <div class="product-item">
                <div class="d-flex product-item-title">
                    <div class="d-flex mx-auto bg-faded p-5 rounded">
                        <h2 class="section-heading mb-0"><span class="section-heading-upper">From Around the World</span><span class="section-heading-lower">Bulk Speciality Blends</span></h2>
                    </div>
                </div><br /><br /><img class="img-fluid d-flex mx-auto product-item-img mb-3 mb-lg-0 rounded" src="/wwwroot/images/products-01.jpg">
                <div class="bg-faded p-5 rounded">
                    <p class="mb-0">You'll discover a diverse selection of cocktails and spirits inspired by regions near and far. From classic concoctions to innovative creations, we invite you to visit us in person for a journey through our drink menu and to learn more about the intriguing stories behind each beverage.</p>
                </div>
            </div>
        </div>
    </section>
    <footer class="text-center footer text-faded py-5">
        <div class="container">
            <p class="m-0 small">Copyright&nbsp;©&nbsp;MixMaster 2023</p>
        </div>
    </footer>
    <script src="~/wwwroot/js/jquery.min.js"></script>
    <script src="~/wwwroot/js/bootstrap.min.js"></script>
    <script src="~/wwwroot/js/current-day.js"></script>
</body>